{
	"name": "nestjs-open-source-template",
	"description": "\uD83D\uDCDC My template for creating NestJS Open Source projects",
	"version": "1.0.0",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky install .github/husky",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-path .gitignore src/**/*.ts"
	},
	"lint-staged": {
		"*.ts": "npm run format"
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SocketSomeone/nestjs-open-source-template"
	},
	"bugs": {
		"url": "https://github.com/SocketSomeone/nestjs-open-source-template"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"contributors": [
		"Alexey Filippov <socket.someone@gmail.com>"
	],
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "19.2.1",
		"@commitlint/config-angular": "19.1.0",
		"@favware/npm-deprecate": "1.0.7",
		"@nestjs/common": "9.4.3",
		"@nestjs/core": "9.4.3",
		"@nestjs/testing": "9.4.3",
		"@types/jest": "29.5.12",
		"@types/node": "20.12.4",
		"@typescript-eslint/eslint-plugin": "5.62.0",
		"@typescript-eslint/parser": "5.62.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.1.3",
		"husky": "9.0.11",
		"jest": "29.7.0",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"reflect-metadata": "0.1.14",
		"release-it": "17.1.1",
		"rimraf": "5.0.5",
		"rxjs": "7.8.1",
		"ts-jest": "29.1.2",
		"ts-node": "10.9.2",
		"typescript": "5.4.4"
	},
	"peerDependencies": {
		"@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0",
		"@nestjs/core": "^8.0.0 || ^9.0.0 || ^10.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	}
}
